# Application Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
# PostgreSQL with PostGIS
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=digital_twin
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# TimescaleDB
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=timeseries
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=password

# MongoDB
MONGODB_URI=mongodb://admin:password@localhost:27017/digital_twin?authSource=admin
MONGODB_DB=digital_twin

# Redis
REDIS_URL=redis://localhost:6379

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=digital-twin-backend

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100mb
ALLOWED_FILE_TYPES=ifc,json,gltf,glb

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
MAPBOX_STYLE=mapbox://styles/mapbox/streets-v11

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@digitaltwin.com

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_MQTT=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# Python Services Configuration
PYTHON_ENV=development
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# BIM Processing Configuration
BIM_PROCESSING_TIMEOUT=300
BIM_MAX_FILE_SIZE=500mb
BIM_OUTPUT_FORMAT=json

# IoT Configuration
IOT_DATA_RETENTION_DAYS=90
IOT_BATCH_SIZE=1000
IOT_PROCESSING_INTERVAL=60

# Energy Management Configuration
ENERGY_ALERT_THRESHOLD=0.8
ENERGY_REPORTING_INTERVAL=3600

# Maintenance Configuration
MAINTENANCE_REMINDER_DAYS=7
MAINTENANCE_NOTIFICATION_EMAIL=true

# Analytics Configuration
ANALYTICS_DATA_RETENTION_DAYS=365
ANALYTICS_BATCH_PROCESSING=true
ANALYTICS_REAL_TIME_ENABLED=true 